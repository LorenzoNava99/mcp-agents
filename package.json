{
  "name": "mcp-agents",
  "version": "1.0.0",
  "description": "MCP server that replaces the Task tool with Claude Agent SDK for session resumption and parallel execution",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "tsc -p tsconfig.test.json && node dist-test/tests/test-all.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "claude",
    "agent",
    "orchestrator",
    "sdk",
    "anthropic"
  ],
  "author": "Lorenzo Nava <lorenzo@berghem.it>",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "latest",
    "@modelcontextprotocol/sdk": "latest",
    "yaml": "^2.6.1",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist"
  ]
}
